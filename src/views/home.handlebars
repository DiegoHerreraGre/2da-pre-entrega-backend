<div class="d-flex mt-5">
  {{#each products}}
    <div class="card m-1">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.price}}</p>
        <a href=`/products/{{this.id}}` class="btn btn-primary">View</a>
      </div>
    </div>
  {{/each}}
</div>